<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/chk4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="60dp"
        android:checked="false"
        android:text="@string/corn_soup"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/icon3"
        app:layout_constraintTop_toBottomOf="@+id/chk2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon5"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/chk5"
        app:layout_constraintStart_toEndOf="@+id/chk5"
        app:layout_constraintTop_toTopOf="@+id/chk5"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/coffee"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:checked="false"
        android:text="@string/hunburger"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:checked="false"
        android:text="@string/Chips"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/icon1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:checked="false"
        android:text="@string/cola"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/chk5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:checked="false"
        android:text="@string/coffee"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/chk3"
        app:layout_constraintTop_toBottomOf="@+id/chk3"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chk1"
        app:layout_constraintLeft_toRightOf="@+id/chk1"
        app:layout_constraintTop_toTopOf="@+id/chk1"
        app:srcCompat="@mipmap/burger"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon2"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chk2"
        app:layout_constraintLeft_toRightOf="@+id/chk2"
        app:layout_constraintTop_toTopOf="@+id/chk2"
        app:srcCompat="@mipmap/frenchfry"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon3"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chk3"
        app:layout_constraintLeft_toRightOf="@+id/chk3"
        app:layout_constraintTop_toTopOf="@+id/chk3"
        app:srcCompat="@mipmap/softdrink"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/icon4"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/chk4"
        app:layout_constraintLeft_toRightOf="@+id/chk4"
        app:layout_constraintTop_toTopOf="@+id/chk4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/soup"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/showOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="172dp"
        android:layout_marginRight="16dp"
        android:text="請點餐"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chk5"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showOrder"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/burger"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/frenchfry"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/softdrink"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/soup"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="197dp" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@mipmap/coffee"
            tools:layout_editor_absoluteX="196dp"
            tools:layout_editor_absoluteY="197dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>